<div class="row content-searchinput">
    <div class="col-md-2" style="display:flex">
        <button id="loading-indicator" class="btn btn-outline-success btn-sm" type="button" disabled>
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            Loading results...
        </button>
    </div>
    <div class="col-md-10">
        <div id="search-input-group" class="input-group">

            <div id="scrollable-dropdown-menu" class="col-md-6">
                <input type="text" class="form-control typeahead" name="q" id="q" placeholder="Search..." autocomplete="off" spellcheck="true">
            </div>

            <span class="input-group-btn col-md-2">
                <button class="btn btn-dark" onclick="Microsoft.Search.ReSearch();">
                    <span class="bi bi-search"></span>
                </button>
            </span>

            <div class="col-md-4">
                <h4 id="doc-count"></h4>
            </div>
        </div>
    </div>
</div>
