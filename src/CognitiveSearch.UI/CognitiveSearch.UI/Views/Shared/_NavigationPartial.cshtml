<div class="offcanvas offcanvas-start" data-bs-scroll="true" tabindex="-1" id="navigation-offcanvas" aria-labelledby="navigation-offcanvas-label">
    <div class="offcanvas-header bg-light">
        <h5 class="offcanvas-title" id="navigation-offcanvas-label">Navigation</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div class="widget-content">

            <div id="search-facet-nav" class="facet-nav search-facet-navigation">
            <!-- see wwwroot/config/search-facets.json -->
			</div>

            <div id="misc-nav" class="facet-nav dynamic-facet-navigation d-none">
                <div class="accordion accordion-flush" id="misc-facets-accordion">
                    <div class="accordion-item" id="misc-accordion-item">
                        <h2 class="accordion-header accordion-item-misc" id="misc-facets">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#misc" aria-expanded="false" aria-controls="miscellanous">Other Refiners</button>
                        </h2>
                        <div id="misc" class="accordion-collapse collapse" role="group" aria-labelledby="misc-facets" data-bs-parent="#misc-facets-accordion">
                            <div class="accordion-body">
                                <div id="facet-nav" class="facet-nav"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="offcanvas-footer">
        <button id="navigation-clear-all" class="container btn btn-warning rounded-0" onclick="Microsoft.Facets.ClearAllFilters();">Clear all filters</button>
    </div>

</div>
